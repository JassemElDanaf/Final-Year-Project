# Keep Jupyter notebooks as-is (no EOL conversion, avoid noisy diffs)
*.ipynb -text
# Force LF for source code (good for cross-platform)
*.py text eol=lf
*.sh text eol=lf
# Keep CRLF for Windows batch files
*.bat text eol=crlf
data/processed/** filter=lfs diff=lfs merge=lfs -text
models/** filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
*.csv filter=lfs diff=lfs merge=lfs -text
